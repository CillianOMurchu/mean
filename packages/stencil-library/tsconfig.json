{
  "extends": "../../tsconfig.json",
  "typeRoots": ["./node_modules/@types", "../../node_modules/@types", "./src"],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "experimentalDecorators": true,
    "lib": ["dom", "es2022"],
    "types": ["node", "@stencil/core", "jest"],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2022",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "h.Fragment"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
